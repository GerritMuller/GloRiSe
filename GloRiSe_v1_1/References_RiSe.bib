keywords = {Bulk petrography,Collision orogens,Heavy minerals,Himalaya,Karakorum,Modern sands,Nanga Parbat,Sediment budgets},
number = {3-4},
pages = {287--302},
title = {{Petrology of Indus River sands: A key to interpret erosion history of the Western Himalayan Syntaxis}},
