doi = {10.1016/j.earscirev.2016.09.009},
file = {:C\:/Users/mulle040/surfdrive/Documents/PIC Database/Africa/Garzanti et al. 2016, Euphrates&Tigris review.pdf:pdf},
issn = {00128252},
journal = {Earth-Science Reviews},
keywords = {Anatolia-Zagros orogen,Heavy minerals,Long-distance sediment transport,Sedimentary petrology,Undissected collision orogen provenance,U–Pb zircon geochronology},
pages = {107--128},
