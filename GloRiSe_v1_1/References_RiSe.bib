issn = {00092541},
journal = {Chemical Geology},
keywords = {Chemical weathering indices,Clay minerals,Model mantle derivation ages,Recycling,Sr and Nd isotopic ratios,Zambezi, Limpopo and Okavango Rivers},
pages = {61--74},
publisher = {Elsevier B.V.},
title = {{Provenance versus weathering control on the composition of tropical river mud (southern Africa)}},
