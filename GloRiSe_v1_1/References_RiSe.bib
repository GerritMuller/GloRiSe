doi = {10.1016/j.chemgeo.2016.08.009},
file = {:C\:/Users/mulle040/surfdrive/Documents/PIC Database/South America/Amazon/guinoiseau2016_Confluences RiuNegro Amazon Ca SPM loss.pdf:pdf},
issn = {00092541},
